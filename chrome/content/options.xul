	buttons="accept"
	>
	<script type="application/x-javascript" src="chrome://bcgmailsigs/content/com/BlankCanvas/BrowserDetect.js"/>
	<script type="application/x-javascript" src="chrome://bcgmailsigs/content/com/BlankCanvas/GmailSignatures.js"/>
	<script type="application/x-javascript" src="chrome://bcgmailsigs/content/options.js"/>
	
	<stringbundleset>
		<stringbundle id="string-bundle-bcGmailSigs" src="chrome://bcgmailsigs/locale/bcgmailsigs.properties"/>
		<stringbundle id="string-bundle-bcGmailSigs-en" src="chrome://bcgmailsigs/content/bcgmailsigsdefaultLang.properties"/>
	</stringbundleset>

	<tabbox>
		<tabs>
			<tab id="generalTab"/>
			<tab id="linksTab"/>
			<tab id="debugTab"/>
		</tabs>
		<tabpanels>
			<tabpanel>			
				<vbox>
					<label id="labelMostOptions" class="header"/>
					<label value=" "/>
