			<tabpanel>
				<vbox>
					<label value=""/>
					<label value="home page" id="labelHomePage" href="http://blankcanvasweb.com/pages/id_9/n_gmail_signatures/" class="text-link"/>
					<label value="facebook page" id="labelFacebookPage" href="http://www.facebook.com/pages/Blank-Canvas-Gmail-Signatures/254402756442" class="text-link"/>
					<label value="support" id="labelGetSupport" href="http://blankcanvasweb.com/forums/id_1/n_bc_gmail_signatures/" class="text-link"/>
				</vbox>
			</tabpanel>
			<!-- ==================== debug =================== -->
			<tabpanel>
				<vbox>
					<hbox>
						<label id="labelDebugMode" class="header"/>
						 <menulist id="debugModeOption">
							 <menupopup>
								 <menuitem label="" value="none" id="debugModeOptionNone"/>
								 <menuitem label="" value="alert" id="debugModeOptionAlert"/>
							</menupopup>
						 </menulist>
					</hbox>
				</vbox>
